@model fondo9Sa3ada.Models.RegisterViewModel
@{
    ViewBag.Title = "S'inscrire";
}
<div class="container text-center">
    <hr />
    <h2>@ViewBag.Title.</h2>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Créez un nouveau compte.</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "block mb-2 text-sm font-medium text-gray-900" })
            <div class="">
                @Html.TextBoxFor(m => m.Email, new { @class = "mx-auto mb-2 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-2.5" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "block mb-2 text-sm font-medium text-gray-900" })
            <div class="">
                @Html.PasswordFor(m => m.Password, new { @class = "mx-auto mb-2 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-2.5" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "block mb-2 text-sm font-medium text-gray-900" })
            <div class="">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "mx-auto mb-2 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-2.5" })
            </div>
        </div>
        <div class="form-group">
            <div class="mt-4">
                <input type="submit" class="btn btn-success" value="S'inscrire" />
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
